
<div class="hidden-xs panel panel-default">
  <div class="panel-heading">
    <div>
      <h3 class="panel-title">Ticket <%= ticket.id %></h3>
    </div>
  </div>
  <div class="panel-body">
    <div>
      <div class="body">
        <div>
          <p><%= ticket.body %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= form_for(@comment) do |f| %>

<%= f.hidden_field :ticket_id, value: @ticket.id %>
<%= f.label :content %>
<%= f.text_area :content %>

<%= f.submit %>
<% end %>
